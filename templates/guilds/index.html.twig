{% extends 'base.html.twig' %}

{% block title %}Guilds index{% endblock %}

{% block body %}
{% if storedValue is not null %}

    {% for character in characters %}
        {% if character.id == storedValue %}
        {% set selectedCharacter = characters|filter(character => character.id == storedValue)|first %}
            {% if character.roleGuild == "ROLE_NONE" %}
                <h1>Guilds index</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>NameGuild</th>
                            <th>NumberOfMember</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for guild in guilds %}
                        <tr>
                            <td>{{ guild.id }}</td>
                            <td>{{ guild.nameGuild }}</td>
                            <td>{{ guild.numberOfMember }}</td>
                            <td>
                                <a href="{{ path('app_guilds_show', {'id': guild.id}) }}">show</a>
                                <a href="{{ path('app_guilds_edit', {'id': guild.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a class="btn" id="myLink">Create new</a>
            {% else %}
                {% set filteredCharacters = characters|filter(character => character.guilds == selectedCharacter.guilds) %}
                <h1>Guilde {{ character.guilds.nameguild }} </h1>
                <h3>Personnage selectionn√©: {{ character.nameCharacter }}</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Member</th>
                            <th>role</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for character in filteredCharacters %}
                        <tr>
                            <td>{{ character.nameCharacter }}</td>
                            <td>{{ character.roleGuild }}</td>
                            {% if selectedCharacter.roleGuild == "ROLE_GUILDMASTER" %}
                            <td>
                                <a class="btn btn-outline-primary" href="{{ path('app_characters_show', {'id': character.id}) }}">show</a>
                                <a class="btn btn-outline-success" href="#">edit</a>
                                <a class="btn btn-outline-danger" href="#">delete</a>
                            </td>
                            {% elseif selectedCharacter.roleGuild == "ROLE_OFFICER" %}
                            <td>
                                <a class="btn btn-outline-primary" href="{{ path('app_characters_show', {'id': character.id}) }}">show</a>
                                <a class="btn btn-outline-success" href="#">edit</a>
                            </td>
                            {% else %}
                            <td>
                                <a class="btn btn-outline-primary" href="{{ path('app_characters_show', {'id': character.id}) }}">show</a>
                            </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% if selectedCharacter.roleGuild == "ROLE_GUILDMASTER" %}
                    {% for guild in guilds %}
                        {% if guild.id == selectedCharacter.guilds.id %}
                            {{ include('guilds/_delete_form.html.twig') }}
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endif %}
        {% endif %}
    {% endfor %}
{% endif %}

    <script>
        $(document).ready(function(){
            var select = document.querySelector("#mySelect");
            var selectedValue = select.options[select.selectedIndex].value;
            $("#myLink").attr("href", "/guilds/new/" + selectedValue);
        });
    </script>
    
{% endblock %}
