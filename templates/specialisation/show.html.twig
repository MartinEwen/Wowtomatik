{% extends 'base.html.twig' %}

{% block title %}Specialisation{% endblock %}

{% block body %}
    <h1>Specialisation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialisation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specialisation.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ asset('upload/specialisation/' ~ specialisation.picture) }}" width="50"></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_admin') }}">back to list</a>

    <a class="btn btn-outline-primary" href="{{ path('app_specialisation_edit', {'id': specialisation.id}) }}">edit</a>

    {{ include('specialisation/_delete_form.html.twig') }}
{% endblock %}
