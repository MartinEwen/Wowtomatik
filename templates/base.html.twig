<!DOCTYPE html>
<html>
  <head>
      <meta charset="UTF-8">
      <title>{% block title %}Wowtomatik{% endblock %}</title>
      <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <link href="{{ asset('css/styleWowtomatik.css') }}" rel="stylesheet"/>
  </head>
 
  <body> 
  <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Accueil</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          {% if is_granted('ROLE_ADMIN') %}
          <li class="nav-item">
            <a class="nav-link" href="/race">Race</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/classe">Classe</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/instances">Instance</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/specialisation">Spécialisation</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/boss">Boss</a>
          </li>
          {% endif %}
          {% if app.user %}
          <li class="nav-item">
            <a class="nav-link" href="/characters">Character</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="linkGuild">Guild</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">déconnexion</a>
          </li>
          {% else %}
          <li class="nav-item">
            <a class="nav-link" href="/login">connexion</a>
          </li>
          {% endif %}
          {% if app.user %}
            <li class="nav-item">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-8 d-flex align-items-center">
                    <label for="" class="fw-bold text-dark">Personnage selectioné: </label>
                  </div>
                  <div class="col-4">
                    <select name="" id="mySelect" class="nav-link"  onchange="storeSelection()">
                      {% for character in app.user.characters %}
                        <option value="{{ character.id }}">{{ character.nameCharacter }}</option>
                      {% else %}
                        <option value="" disabled>Aucun Personnage crée</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>
              </div>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-lg-2"></div>
      <div class="col-xs-12 col-lg-8 parchemin">
      {% block body %}{% endblock %}
      </div>
      <div class="col-xs-12 col-lg-2"></div>
    </div>
  </div>
      <script>
        function storeSelection() {
          var select = document.getElementById("mySelect");
          var selectedValue = select.options[select.selectedIndex].value;
          localStorage.setItem("selectedValue", selectedValue);
          location.reload(true);
          document.getElementById("selectedValue").innerHTML = localStorage.getItem("selectedValue");
        }
         $(document).ready(function(){
            var select = document.querySelector("#mySelect");
            var selectedValue = select.options[select.selectedIndex].value;
            $("#linkGuild").attr("href", "/guilds/" + selectedValue);
            $("#linkCharacter").attr("href", "/guilds/" + selectedValue);
        });
        function loadSelection() {
          var select = document.getElementById("mySelect");
          var storedValue = localStorage.getItem("selectedValue");
          for (var i = 0; i < select.options.length; i++) {
            if (select.options[i].value === storedValue) {
                select.selectedIndex = i;
                break;
            }
          }
        }
        document.addEventListener("DOMContentLoaded", loadSelection);
      </script>
  </body>
</html>
