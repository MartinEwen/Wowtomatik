{% extends 'base.html.twig' %}

{% block title %}Race{% endblock %}

{% block body %}
    <h1>Race</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ race.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ race.picture }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <a class="btn btn-outline-primary" href="{{ path('app_admin') }}">back to list</a>
        <a class="btn btn-outline-primary" href="{{ path('app_race_edit', {'id': race.id}) }}">edit</a>
    </div>

    {{ include('race/_delete_form.html.twig') }}
{% endblock %}
