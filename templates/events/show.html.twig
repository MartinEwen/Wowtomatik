{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <h1>Events</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>NameEvent</th>
                <td>{{ event.nameEvent }}</td>
            </tr>
            <tr>
                <th>NameUserCreator</th>
                <td>{{ event.nameUserCreator }}</td>
            </tr>
            <tr>
                <th>DateEvent</th>
                <td>{{ event.dateEvent ? event.dateEvent|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumberOfTank</th>
                <td>{{ event.numberOfTank }}</td>
            </tr>
            <tr>
                <th>NumberOfHeal</th>
                <td>{{ event.numberOfHeal }}</td>
            </tr>
            <tr>
                <th>NumberOfDps</th>
                <td>{{ event.numberOfDps }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_events_index') }}">back to list</a>

    <a href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>

    {{ include('events/_delete_form.html.twig') }}
{% endblock %}
