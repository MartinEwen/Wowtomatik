{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
     {% if storedValue is not null %}
                {% for character in characters %}
                        {% if character.id == storedValue %}
                        {% set selectedCharacter = characters|filter(character => character.id == storedValue)|first %}
                                {% if selectedCharacter.roleGuild == "ROLE_OFFICER" or selectedCharacter.roleGuild == "ROLE_GUILDMASTER" %}
                                    <h1>Un nouveau Boss est tombé?</h1>
                                    {{ include('kill/_form.html.twig') }}
                                    <div class="d-flex justify-content-center">
                                        <a class="btn" href="{{ path('main') }}">Retour à l'acceuil</a>
                                    </div>
                                {% endif %}
                        {% endif %}
                {% endfor %}
        {% endif %}
{% endblock %}
