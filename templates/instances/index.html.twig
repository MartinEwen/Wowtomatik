{% extends 'base.html.twig' %}

{% block title %}Instances index{% endblock %}

{% block body %}
    <h1>Instances index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameInstance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for instance in instances %}
            <tr>
                <td>{{ instance.id }}</td>
                <td>{{ instance.nameInstance }}</td>
                <td>
                    <a href="{{ path('app_instances_show', {'id': instance.id}) }}">show</a>
                    <a href="{{ path('app_instances_edit', {'id': instance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_instances_new') }}">Create new</a>
{% endblock %}
